<main class="mb-2">
    <div class="login-title">
    <h1 class="mb-1 mx-3" style="color: white;">Welcome to our travel plan website!</h1>
    </div>
    <div>{{update}}</div>
    <div class="logincard">
    <form id="input-submit" name="login-register" method="POST" action="/login/personal">
        <div class="form-group mb-1 mx-3 w-25">
            <h1 style="font-size: 40px; color:black">Login</h1>
            <div>
                <label for="input-username">Username：</label>
                <input id="input-username" class="form-control mb-3" type="text" name="username"/>
            </div>
            <div>
                <label for="input-password">Password：</label>
                <input id="input-password" class="form-control mb-3" type="password" name="password"/>
            </div>
            <div>
                <button class="btn btn-outline-primary mb-3 mx-2" type="submit" name="login" id="button">Login</button>
            </div>
        </div>
        <a href="http://localhost:3000/login/register">Need to register? Click here to sign-up</a>
    </form>
    </div>
    <div id="error-checking" class="error">{{errorMessage}}</div>
    <div id="register-checking" class="register">{{registeredMessage}}</div>
</main>
