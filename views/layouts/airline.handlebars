<div id="airlinePick" class="container">
    <link rel="stylesheet" href="/public/css/loading.css">
    <main>
        <h1>Select your airline</h1>
        <form id="airline-pick" name="airlineParam" method="post">
            <div class="form-group w-50">
                <div class="row">
                    <div class="col">
                        <label for="originLoc">Type your origin location</label>
                        <input class="form-control mb-3" id="originLoc" name="originLocationCode" type="text">
                    </div>

                    <div class="col">
                        <label for="destination">Type your destination location</label>
                        <input class="form-control mb-3" id="destination" name="destinationLocationCode" type="text">
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="departureDate">Type your departureu Date</label>
                        <input class="form-control mb-3" id="departureDate" name="departureDate" type="date">
                    </div>

                    <div class="col">
                        <label for="adults">Type your Adults</label>
                        <input class="form-control mb-3" id="adults" name="adults" type="number">
                    </div>
                </div>

                <div>
                    <label for="submit"></label>
                    <input type="submit" class="btn" value="Submit" id="loadingAni">
                </div>
            </div>
        </form>
    </main>
    <div id="flightShow">
        <ul id="ticketList"></ul>
    </div>
    <div id="errorShow"></div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/public/js/flightShow.js"></script>
</div>